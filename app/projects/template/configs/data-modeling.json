        "split-on-languages":["bg","cs","da","de","el","es","et","fi","fr","ga","hr","hu","is",
                              "it","lt","lv","mt","nb","nl","pl","pt","ro","sk","sl","sv",
                              "en-fr","en-pl","#all"],
        "eval-measures": ["bleu","meteor"]
    }   
    
}
